<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyv.taotao.mapper.TaoItemCatMapper">

    <resultMap id="listCategroyRM" type="TaoItemCatEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="children" column="id" ofType="TaoItemCatEntity"
                    select="listCategoryByPid">
        </collection>
    </resultMap>

    <select id="listGoodsCategory" resultMap="listCategroyRM">
        select id,name from tb_item_cat where parent_id='0';
    </select>

    <select id="listCategoryByPid" resultMap="listCategroyRM">
        select id,name from tb_item_cat where parent_id = #{id};
    </select>


</mapper>